{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "dist",
    "downlevelIteration": true,
    "importHelpers": true,
    "noUnusedLocals": true
    "target": "es2017"
  },
  "exclude": [
    "**/__mock__",
    "**/__snapshot__",
    "**/__tests__",
    "**/*.spec.*",
    "**/*.test.*"
  ],
  "include": ["src/**/*"]
}
